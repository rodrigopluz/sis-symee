{
    "name": "rodrigopluz/spark-plug",
    "description": "Yet another way to access CodeIgniter's instance",
    "keywords": [
        "codeigniter",
        "instance",
        "php",
        "spark-plug"
    ],
    "homepage": "https://github.com/rodrigopluz/spark-plug",
    "license": "MIT",
    "authors": [
        {
            "name": "Rodrigopluz",
            "email": "rodrigopluz@gmail.com",
            "homepage": "http://rodrigopluz.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "rodrigopluz/codeigniter": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Rodrigopluz\\SparkPlug\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rodrigopluz\\SparkPlug\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    },
    "suggest": {
        "rodrigopluz/codeigniter": "Yet another way to install CodeIgniter via Composer",
        "rodrigopluz/combustor": "Lets you generate controllers, models, and views from database tables for CodeIgniter",
        "rodrigopluz/refinery": "\"Ready-to-eat\" migrations for CodeIgniter"
    }
}
